<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahmaniaaas.asynctaskasik.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_gambar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="73dp"
        android:text="Pilih Menu :"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn_nama"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="206dp"
        android:background="@color/colorAccent"
        android:onClick="lihatNama"
        android:text="LIHAT NAMA"
        android:textAlignment="center"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/btn_gambar"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_nama"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/colorAccent"
        android:onClick="lihatGambar"
        android:text="LIHAT GAMBAR"
        android:textAlignment="center"
        android:textColor="#ffffff" />

</RelativeLayout>
